<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blanco_vergas"
    tools:context=".loginActivity">


    <TextView
        android:id="@+id/accionesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Acciones"
        app:layout_constraintStart_toEndOf="@+id/estatusList2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/folioList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Folio Interno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/estatusList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="16dp"
        android:text="Estatus"
        app:layout_constraintStart_toEndOf="@+id/folioList"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_folio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/folioList" />

    <TextView
        android:id="@+id/estatusList2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Fecha"
        app:layout_constraintStart_toEndOf="@+id/estatusList"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_estatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/TV_folio"
        app:layout_constraintTop_toBottomOf="@+id/estatusList" />

    <TextView
        android:id="@+id/TV_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/TV_estatus"
        app:layout_constraintTop_toBottomOf="@+id/estatusList2" />

    <ImageView
        android:id="@+id/IV_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/TV_fecha"
        app:layout_constraintTop_toBottomOf="@+id/accionesList"
        app:srcCompat="@drawable/ic_enviar" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="28dp"
        android:layout_height="22dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/accionesList"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TV_envio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="4dp"
        android:text="Enviando"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/IV_enviar"
        app:layout_constraintTop_toBottomOf="@+id/progressBar2" />
</androidx.constraintlayout.widget.ConstraintLayout>